# Production Environment Variables for Docker Compose
# This file should be used with docker-compose via --env-file flag

# Encryption Key (CRITICAL - Must be 32+ characters)
# Generate with: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=master-production-key-change-me-32chars!!

# Legacy keys deprecated - now use ENCRYPTION_MASTER_KEY
# These are set to the same value for backward compatibility
DEVMESH_ENCRYPTION_KEY=${ENCRYPTION_MASTER_KEY}

# Database Configuration
DATABASE_HOST=database
DATABASE_PORT=5432
DATABASE_NAME=devmesh_development
DATABASE_USER=devmesh
DATABASE_PASSWORD=devmesh_password
DATABASE_SSL_MODE=disable

# Redis Configuration
REDIS_ADDR=redis:6379
REDIS_PASSWORD=

# API Configuration
REST_API_URL=http://rest-api:8081
MCP_SERVER_URL=http://mcp-server:8080

# Authentication
ADMIN_API_KEY=dev-admin-key-1234567890

# AWS Configuration (if using real AWS)
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=

# GitHub Configuration
# GITHUB_ACCESS_TOKEN=
# GITHUB_WEBHOOK_SECRET=

# Worker Configuration
WORKER_CONSUMER_NAME=worker-1
WORKER_IDEMPOTENCY_TTL=24h

# Logging
LOG_LEVEL=info

# Environment
ENVIRONMENT=production